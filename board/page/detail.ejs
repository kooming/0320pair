<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/detail.css">
</head>
<body>
    <div class="detail-box">
        <div>제목: <%= data.title %></div>
        <div>내용: <%= data.content %></div>
        <div><img src="<%= data.imgpath %>" alt=""> <button class="like">♥</button></div>
        <button class="remove-btn">삭제</button>
        <button class="edit-btn">수정</button>
    </div>
    <div class="comment-form">
        <form action="">
            <label for="">댓글</label>
            <input type="text" name="comment" placeholder="댓글을 입력해주세요 :) ">
            <button>등록</button>
        </form>
    </div>
        

</body>
<script>
    const editBtn =document.querySelector(".edit-btn");
    editBtn.onclick =() => {
        location.href ="/edit?index=<%= data.id %>";
    }
    const removeBtn = document.querySelector(".remove-btn");
    removeBtn.onclick =() => {
        const data =confirm("삭제하시겠습니까?")
        if(data === true){
            location.href = "/delete?index=<%= data.id %>"
        }
    }
</script>
</html>